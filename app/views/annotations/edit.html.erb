<%= stylesheet_link_tag "table_styles", media: "all", "data-turbo-track": "reload" %>

<h1>Editar Anotação</h1>

<%= form_with(model: [@element, @annotation], local: true) do |form| %>
  <% if @annotation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@annotation.errors.count, "erro") %> proibiu esta anotação de ser salva:</h2>

      <ul>
        <% @annotation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, value: @annotation.content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Voltar', table_path(@element.id) %>
